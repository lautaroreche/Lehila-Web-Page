{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "tailwindcss": "^4.1.11"
  },
  "scripts": {
    "build:css": "npx tailwindcss -i ./lehila_app/static/css/input.css -o ./lehila_app/static/css/output.css --minify && python manage.py collectstatic --noinput",
    "watch:css": "npx tailwindcss -i ./lehila_app/static/css/input.css -o ./lehila_app/static/css/output.css --watch & nodemon --watch ./lehila_app/static/css/output.css --exec \"python manage.py collectstatic --noinput\""
    }
}
